			<td>U</td>
			<td>V</td>
			<td>W</td>
			<td>X</td>
			<td>Y</td>
			<td>Z</td>
		</tr>
	</table>

	<ul>
	<% @authors.each do |author| %>
		<li><%= link_to author.name, author_path(author), :id => 'author_name'%></li>
	<% end %>
	</ul>