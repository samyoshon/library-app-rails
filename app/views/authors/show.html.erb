<link rel="stylesheet" type="text/css" href="/app/assets/images">
<link href='https://fonts.googleapis.com/css?family=Yesteryear' rel='stylesheet' type='text/css'>

<div id='navbar'>
	<%= link_to image_tag('library_logo.jpg'), home_path, :id => 'home_logo'%>
	<%= link_to 'The Library of Sam', home_path, :id => 'home_name'%>
</div>

<div id='title'>
	<h1><%= @author.name %></h1>
</div>

<h4><%= @author.bio %></h4>

<ul>
	<% @books = @author.books %>
	<% @books.each do |book| %>
		<li><%= link_to book.title, book_path(book)  %></li>
	<% end %>
</ul>
